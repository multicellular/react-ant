// more see https: //www.tslang.cn/docs/handbook/compiler-options.html
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    // "paths": {
    //   "@components/*": [
    //     "./src/components/*"
    //   ],
    //   "@pages/*": [
    //     "./src/pages/*"
    //   ],
    //   "@assets/*": [
    //     "./src/assets"
    //   ],
    //   "@utils/*": [
    //     "./src/utils"
    //   ]
    // },
  },
  "include": [
    "src"
  ]
}